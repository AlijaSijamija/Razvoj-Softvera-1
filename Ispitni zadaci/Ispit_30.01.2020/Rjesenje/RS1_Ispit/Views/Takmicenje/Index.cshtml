
@{
    ViewData["Title"] = "Index";
}
@model TakmicenjeOdaberiVM
<h2>Index</h2>

<form asp-action="Prikaz">
    <label>Škola domaćin:</label>
    <select class="form-control" asp-for="SkolaID" asp-items="@Model.Skole"></select>
    <br/>
    <label>Razred:</label>
    <select class="form-control" asp-for="Razred">
        <option value="0">Odaberite razred</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
    <br/>
    <input type="submit" class="btn btn-primary"/>
</form>